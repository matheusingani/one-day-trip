<p style="color: green"><%= notice %></p>

<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://media.cntraveller.com/photos/64624a3b26c5568e6cd76d8a/4:3/w_2664,h_1998,c_limit/lisbon-GettyImages-1401359847.jpg)">
<%= @place. city %>
</div>


<h2 class = "mt-3"><%= @place. city %></h2>
<p><%= @place.description %></p>

<% @experiences.each do |experience| %>
  <div>
    <p>Rating: <%= experience.rating %></p>
  </div>
<% end %>

<h2>Rate this place:</h2>
<%= form_with(model: [@place, @experience], url: "/places/1/create_experience?place_id=1", local: true) do |form| %>
  <div class="field">
    <%= form.label :rating %>
    <%= form.number_field :rating, min: 1, max: 5 %>
    <%= form.hidden_field :place_id, value: 1 %>

  </div>
 <%= form.submit 'Submit Rating' %>
<% end %>


<div>
  <%= link_to "Edit this place", edit_place_path(@place) %> |
  <%= link_to "Back to places", places_path %>

  <%= button_to "Destroy this place", @place, method: :delete %>
</div>
