<div class = "container">
<h1>One Day Trip</h1>

<form novalidate="novalidate" class="simple_form search d-none" action="/" accept-charset="UTF-8" method="get">
  <div class="search-form-control form-group">
    <input class="form-control string required" type="text" name="search[query]" id="search_query" />
    <button name="button" type="submit" class="btn btn-flat">
      <i class="fas fa-search"></i> Search
    </button>
  </div>
</form>

<div style="width: 100%; height:50vh;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>


<div class="cards mb-5">
  <% @best_places.each do |city, places | %>
 <%= link_to places do %>
    <div class="card-category text-center" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path places.photo.key %>')">
      <%= places.title %><br>
      in<br>
      <%= places.city %>

    </div>
    <% end %>
  <% end %>
